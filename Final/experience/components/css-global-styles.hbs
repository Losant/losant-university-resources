body {
  color: #758D83;
  font-size: 13px;
  font-family: Helvetica;
  font-weight: 300;
  background-color: #D0F8FA;
  overflow: hidden;
}

a {
  color: #7D3024;
}

.button {
  height: 32px;
  border-radius: 6px;
  padding-left: 20px;
  padding-right: 20px;
  border: none;
  background-color: #758D83;
  color: white;
}

label {
  margin: 0;
  padding: 0;
}

#flex-container {
  display: flex;
  flex-direction: row;
  height: 100%;
}

.flex-item {
  flex: auto;
}

#sidebar {
  display: flex;
  flex-direction: column;
  width: 255px;
  background-color: white;
  height: 100%;
  border-right: 1px solid #ACBBB5;
  padding: 16px;
}

#sidebar-experience-groups {
  flex: auto;
  min-height: 0px;
  flex-basis: 50%;
}

#sidebar-filters {
  flex: auto;
}