#login-page {
  background-color: #13DCE5;
  font-size: 12px;
}

#login-page-container {
  display:flex;
  flex-direction:row;
  height:100%;
  width:100%;
  align-items:center;
  justify-content:center;
}

#login-page-content {
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:center;
  position:relative;
  width:933px;
  height:587px;
  background-color:white;
  box-shadow: 0px 3px 6px 0px rgba(0,0,0,0.10);
}

#login-page-logo {
  position:absolute;
  top:22px;
  left:0px;
}

#login-page-form {
  width: 330px;
}

#login-page label {
  font-size: 14px;
  margin-bottom: 5px;
  display: inline-block;
}

#login-page input {
  width: 100%;
  height: 52px;
  border: 1px solid #758D83;
  border-radius: 6px;
  font-size: 20px;
  padding-left: 15px;
  padding-right: 15px;
  margin-bottom: 25px;
}

#login-page input.login-page-invalid {
  border: 1px solid red;
}

#login-page input::placeholder {
  color: #758D83;
  font-weight: 300;
}

#login-page button {
  width: 100%;
  height: 52px;
  border-radius: 6px;
  background-color: #758D83;
  color: white;
  font-size: 20px;
  border: 0px;
  margin-bottom: 20px;
}

#login-page a {
  font-size: 14px;
  text-decoration: none;
}

#login-page-account-links {
  width:100%;
  text-align:center;
}

#login-page-copyright {
  position:absolute;
  bottom:10px;
  right:10px;
}