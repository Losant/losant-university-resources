.device-group {
  background-color: white;
  margin-bottom: 16px;
  border-radius: 6px;
  padding: 16px;
  border: 1px solid #ACBBB5;
  border-left: 3px solid green;
}

.device-group-name {
  font-size: 15px;
  margin-top: 7px;
  margin-bottom: 7px;
  margin-left: 10px;
}

.device {
  width: 255px;
  height: 390px;
  margin: 10px;
  box-shadow: 0px 3px 6px 0px rgba(0,0,0,0.10);
}

.device-group-model-label {
  font-size: 9px;
  padding-bottom: 4px;
}