.panel-container {
    display:flex;
    flex-direction:row;
    height:100%;
    width:100%;
    align-items:center;
    justify-content:center;
  }
  
  .panel-content {
    display:flex;
    flex-direction:column;
    align-items:center;
    justify-content:center;
    position:relative;
    width:933px;
    height:587px;
    background-color:white;
    box-shadow: 0px 3px 6px 0px rgba(0,0,0,0.10);
  }
  
  .panel-page-form {
    width: 330px;
  }
  
  .panel-content .large-button {
    width: 100%;
    height: 52px;
    border-radius: 6px;
    background-color: #758D83;
    color: white;
    font-size: 20px;
    border: 0px;
    margin-bottom: 20px;
  }
  
  .panel-content input::placeholder {
    color: #758D83;
    font-weight: 300;
  }
  
  .panel-page-form label {
    font-size: 14px;
    margin-bottom: 5px;
    display: inline-block;
  }
  
  .panel-page-form input {
    width: 100%;
    height: 52px;
    border: 1px solid #758D83;
    border-radius: 6px;
    font-size: 20px;
    padding-left: 15px;
    padding-right: 15px;
    margin-bottom: 25px;
  }
  
  .panel-content input.panel-page-invalid {
    border: 1px solid red;
  }
  
  .panel-content .back-link {
    position:absolute;
    bottom:10px;
    left:10px;
  }
  
  .panel-content .back-link a {
    font-size: 12px;
  }