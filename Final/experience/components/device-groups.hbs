<div class="device-groups" style="flex:auto; padding:30px;box-sizing:border-box;height:100%;overflow:scroll;">
  {{#each @root.pageData.selectedGroups}}
    <div class="device-group">
      <div class="device-group-name">{{this.name}}</div>
      <div style="display:flex; flex-direction:row; flex-wrap:wrap;">
        {{#each this.devices}}
        <div class="device">
          <div style="position:relative; height:39px; background-color:#AEA892; color:white; font-size:16px;box-sizing:border-box; padding-top:6px;padding-left:8px;">
            <div class="device-group-model-label">Model</div>
            {{this.tags.model.[0]}}
            <div style="position:absolute; top:12px; right:2px;">
              <a href="/device-details?device={{this.id}}{{#each @root.pageData.selectedGroups}}&group={{this.id}}{{/each}}" style="padding:8px;">
                <img src="https://{{@root.globals.filesRoot}}/{{@root.application.id}}/angle-right.png" width="9">
              </a>
            </div>
          </div>
          <div style="height:3px; background-color:#5CB700;"></div>
          <div style="height:12px; box-sizing:border-box; padding:7px 10px 7px 10px; width:100%; display:flex; font-size: 9px; justify-content:space-between;">
            <div style="display:flex;">
              <div style="height:7px; width: 7px; border-radius: 3.5px; background-color: #A7A7A7; margin-right:4px;"></div>
              <div>Idle</div>
            </div>
            <div>
              {{this.tags.serial.[0]}}
            </div>
          </div>
          <div style="width:100%; box-sizing:border-box;padding:7px 14px 7px 14px;height:122px;">
            <img src="https://{{@root.globals.filesRoot}}/{{@root.application.id}}{{this.tags.image.[0]}}" style="width:100%; height:100%; object-fit:contain;">
          </div>
          <div style="width:100%; box-sizing:border-box; padding:0px 14px 7px 14px; font-size:9px;">
            Location
          </div>
          <div style="width:100%; box-sizing:border-box;padding:0px 14px 0px; 14px; height:126px; margin-bottom:14px;">
            <div class="device-block-map-container" data-device-location="{{this.tags.location.[0]}}" data-device-id="{{this.id}}" style="border:1px solid #DEDCD3; width:100%; height:100%">
              {{! map placed here by JavaScript in js-device-blocks component }}
            </div>
          </div>
          <div style="width:100%; display:flex; box-sizing:border-box; padding:0px 14px 4px 14px; font-size:10px;line-height:12px;">
            <div style="width:3px; height:12px; background-color:#5CB700;margin-right:4px;"></div>
            <div>System Healthy</div>
          </div>
          <div style="width:100%; display:flex; box-sizing:border-box; padding:0px 14px 4px 14px; font-size:10px;line-height:12px;">
            <div style="width:3px; height:12px; background-color:#5CB700;margin-right:4px;"></div>
            <div>No Scheduled Maintenance Required</div>
          </div>
          <div style="width:100%; display:flex; box-sizing:border-box; padding:0px 14px 4px 14px; font-size:10px;line-height:12px;">
            <div style="width:3px; height:12px; background-color:#5CB700;margin-right:4px;"></div>
            <div>Fuel level good</div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  {{/each}}
</div>