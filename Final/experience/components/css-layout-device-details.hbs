#layout-device-details .status-border-green {
  border-left: 3px solid #5CB700;
  border-right: 1px solid #ACBBB5;
  border-top: 1px solid #ACBBB5;
  border-bottom: 1px solid #ACBBB5;
}

#layout-device-details .status-border-red {
  border-left: 3px solid #B70000;
  border-right: 1px solid #ACBBB5;
  border-top: 1px solid #ACBBB5;
  border-bottom: 1px solid #ACBBB5;
}