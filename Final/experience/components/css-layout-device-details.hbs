#layout-device-details .device-list-item {
  width: 100%;
  height: 40px;
  line-height: 40px;
  box-sizing:border-box;
  border-bottom: 1px solid #EFEEE8;
  display: flex;
  margin-bottom: 10px;
}

#layout-device-details .device-list-item:hover {
  background-color: #EFEEE8;
  border-radius: 0px 6px 6px 0px;
}

#layout-device-details .selected {
  background-color: #EFEEE8;
  border-radius: 0px 6px 6px 0px;
}

#layout-device-details .device-list-item-link {
  text-decoration: none;
}

#layout-device-details .breadcrumbs {
  font-size: 15px;
  height: 70px;
  line-height: 70px;
  padding-left: 30px;
}

#layout-device-details .breadcrumbs a {
  text-decoration: none;
}

#layout-device-details .status-green {
  background-color: #5CB700;
}

#layout-device-details .status-red {
  background-color: #B70000;
}

#main {
